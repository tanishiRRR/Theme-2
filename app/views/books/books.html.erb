<h1>Books</h1>
<div>
  <div>
    <h4>Title</h4>
    <h4>Body</h4>
    <h4></h4>
  </div>
  <div>
    <% @books.each do |book| %>
      <p><%= book.title %></p>
      <p><%= book.body %></p>
    <% end %>
  </div>
</div>

<!--formを作成、Bookモデルと連携-->
<div class="form-area">
  <h2>New book</h2>
  <%= form_with model: @book, url: '/books', method: :post do |f| %>
    <div class="new-book">
      <p>Title</p><%= f.text_field :title %>
    </div>
    <div class="new-book">
      <p>Body</p><%= f.text_area :body %>
    </div>
    <div class="new-book">
      <%= f.submit " Create Book " %>
    </div>
  <% end %>
</div>
